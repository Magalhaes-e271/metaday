<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Botão Voltar -->
    <ImageButton
        android:id="@+id/ImgButtonVoltaId"
        android:src="@drawable/voltar"
        android:layout_width="15pt"
        android:layout_height="15pt"
        android:layout_marginTop="10pt"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <!-- Botão Editar (canto superior direito) -->
    <ImageButton
        android:id="@+id/ButtonEdit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/baseline_edit_24"
        android:background="@drawable/baseline_circle_24"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:tint="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:layout_marginEnd="8dp" />


    <!-- Imagem principal -->
    <ImageView
        android:id="@+id/imgDetalhe"
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ImgButtonVoltaId"
        android:layout_marginTop="18pt"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <!-- Título -->
    <TextView
        android:id="@+id/txtTituloDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgDetalhe"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Descrição -->
    <TextView
        android:id="@+id/txtDescricaoDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTituloDetalhe"
        android:layout_marginTop="20dp"
        android:textSize="18sp" />

    <!-- Autor -->
    <TextView
        android:id="@+id/txtAutorDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDescricaoDetalhe"
        android:layout_marginTop="7dp" />

    <!-- Disponibilidade -->
    <TextView
        android:id="@+id/txtDisponivelDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAutorDetalhe"
        android:layout_marginTop="7dp" />

</RelativeLayout>
