<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageButton
        android:id="@+id/ButtonVisitante"
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20pt"
        android:src="@drawable/olho"
        android:layout_marginRight="18dp"
        android:scaleType="centerCrop"
        android:background="@null"
        />

    <ImageView
        android:id="@+id/imgbooklog"
        android:src="@drawable/baseline_menu_book_24"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="128dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgbooklog"
        android:id="@+id/edit_text_email"
        android:hint="Digite seu email"
        android:layout_margin="16dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_email"
        android:id="@+id/edit_text_senha"
        android:hint="Digite sua senha"
        android:layout_margin="16dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/ButtonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_senha"
        android:textSize="16dp"
        android:text="Entrar"
        android:layout_margin="16dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ButtonLogin"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÃ£o tem uma conta?" />

        <TextView
            android:id="@+id/textLinkCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastre-se"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:layout_below="@+id/ButtonLogin"
            android:layout_toRightOf="@id/txtNtc"
            android:layout_alignBaseline="@id/txtNtc"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</RelativeLayout>
